{
    "compilerOptions": {
        "module": "ES6",
        "target": "es5",
        "jsx": "react-native",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true, /* Emit design-type metadata for decorated declarations in source files. */
        "moduleResolution": "node",
        "lib": [ "dom", "es2017"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@component/*": [
                "src/components/*"
            ]
        }
    }
}